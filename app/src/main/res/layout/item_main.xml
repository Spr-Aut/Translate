<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"

    >
    <!--主体内容-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_item_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/rectangel_radius"
        app:cardElevation="4dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="@dimen/padding_horizontal_main"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_vertical_item"
            android:paddingBottom="@dimen/padding_vertical_item"
            android:paddingHorizontal="@dimen/padding_horizontal_item"
            android:background="@color/card_bg"
            >
            <!--源文本-->
            <TextView
                android:id="@+id/tv_item_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                style="@style/TextStyleOrigin"
                android:text="Hello"
                />
            <!--翻译后的文本-->
            <TextView
                android:id="@+id/tv_item_trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/TextStyleTrans"
                android:text="你好"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!--左滑后的内容-->
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_item_main_slide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/rectangel_radius"
            app:cardElevation="4dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="@dimen/padding_horizontal_main"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="删除"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="#ff0000"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>